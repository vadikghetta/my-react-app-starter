{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "types": ["@testing-library/jest-dom"],
      "paths": {
        "@/*": ["./src/*"]
      },
      "plugins": [ { "name": "typescript-plugin-css-modules" }]
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
  }